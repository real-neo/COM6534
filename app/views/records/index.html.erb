<h1>All records</h1>
<div class="ui-card-wrap">
  <% @records.each do |r| %>
    <% f = Requirement.find(r.project_id) %>
    <div class="card col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h1 class="panel-title"><%= f.project_name %></h1>
        </div>
        <div class="panel-body">
          <p><%= f.project_details %></p>
          <%= link_to("Details", f, class: "btn btn-default") %>
          <% u = User.find_by_username(f.username) %>
          <%= link_to("Accepted by #{u.givenname} #{u.sn}", u, class: "btn btn-default") %>
        </div>
      </div>
    </div>
  <% end %>
</div>