<% if user_signed_in? %>
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Company Name</th>
      <th>Email</th>
      <th>Project Name</th>
      <th>Details</th>
      <th>Budget</th>
      <th>State</th>
      <th></th>
      <% if user_signed_in? %>
        <th></th>
        <% if current_user.admin? %>
          <th></th>
        <% end %>
      <% end %>
    </tr>
    <% @requirements.each do |f| %>
      <tr>
        <td><%= f.company_name %></td>
        <td><%= f.email %></td>
        <td><%= f.project_name %></td>
        <td><%= f.project_details %></td>
        <td><%= f.budget %></td>
        <td><%= f.state %></td>
        <td><%= link_to 'Show', requirement_path(f) %></td>
        <% if user_signed_in? %>
          <% if f.state == 'Waiting' %>
            <td><%= link_to 'Accept', accept_requirement_path(f), data: {confirm: 'Are you sure?'} %></td>
          <% else %>
            <td><%= link_to 'Decline', decline_requirement_path(f), data: {confirm: 'Are you sure?'} %></td>
          <% end %>
          <% if current_user.admin? %>
            <td><%= link_to 'Delete', f, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
    </table>
<% end %>