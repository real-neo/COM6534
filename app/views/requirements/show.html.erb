<div class="col-md-2"></div>
<div class="col-md-8">
  <h1>Project details</h1>
  <%= form_for(@requirement, action: "show") do |f| %>
    <div class="form-group">
      <%= f.label(:state, "Project state", class: "control-label") %>
      <% if @requirement.state == 'Waiting' %>
        <h3><span class="glyphicon glyphicon-time"></span>This project is still waiting for accepted.</h3>
      <% elsif @requirement.state == 'Accepted' %>
        <h3><span class="glyphicon glyphicon-ok-circle"></span>This project was accepted.</h3>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label(:project_name, "Project name", class: "control-label") %>
      <%= f.text_field(:project_name, class: "form-control", readonly: "readonly") %>
    </div>
    <div class="form-group">
      <%= f.label(:budget, "Project budget", class: "control-label") %>
      <%= f.text_field(:budget, class: "form-control", readonly: "readonly") %>
    </div>
    <div class="form-group">
      <%= f.label(:project_details, "Project details", class: "control-label") %>
      <%= f.text_area(:project_details, size: "0x3", class: "form-control", readonly: "readonly") %>
    </div>
    <div class="form-group">
      <%= f.label(:company_name, "Company name", class: "control-label") %>
      <%= f.text_field(:company_name, class: "form-control", readonly: "readonly") %>
    </div>
    <div class="form-group">
      <%= f.label(:email, "Email address", class: "control-label") %>
      <%= f.text_field(:email, class: "form-control", readonly: "readonly") %>
    </div>
  <% end %>
</div>
<div class="col-md-2"></div>