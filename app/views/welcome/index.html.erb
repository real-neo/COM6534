<div class="position-relative overflow-hidden m-md-3 text-center bg-light">
  <div class="col-md-5 p-lg-5 mx-auto my-5">
    <h2 class="display-5">Project Platform</h2>
    <p class="lead">Want to track your project?</p>
    <%= form_tag({controller: "requirements", action: "index"}, method: "get") do %>
      <div class="form-group mb-2">
        <%= text_field_tag(:id, nil, placeholder: "Project track ID", class: "form-control") %>
      </div>
      <div class="form-group mb-2">
        <%= submit_tag('Track', class: "btn btn-primary") %>
      </div>
    <% end %>
    <p class="lead">Have a good idea?</p>
    <%= link_to('Upload your new project', new_requirement_path, class: 'btn btn-primary') %>
  </div>
</div>