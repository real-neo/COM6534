<div class="col-md-2"></div>
<div class="col-md-8">
  <h1>Module</h1>
  <%= simple_form_for(@mod, action: "show") do |f| %>
    <div class="form-group">
      <%= f.label(:name, "Name", class: "control-label") %>
      <%= f.text_field(:name, class: "form-control", readonly: "readonly") %>
    </div>
    <div class="form-group">
      <%= f.label(:code, "Code", class: "control-label") %>
      <%= f.text_field(:code, class: "form-control", readonly: "readonly") %>
    </div>
    <div class="form-group">
      <%= f.label("Users", class: "control-label") %>
      <div>
        <% @mod.users.each do |u| %>
          <%= link_to(u.givenname + " " + u.sn, u, class: "btn btn-default") %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div class="col-md-2"></div>