<% content_for :title, 'Modules' %>
<h1>All modules</h1>
<div class="ui-card-wrap">
  <% @mods.each do |f| %>
    <div class="card col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h1 class="panel-title"><%= f.name %></h1>
        </div>
        <div class="panel-body">
          <p>Code: <%= f.code %></p>
          <%= link_to("Details", f, class: "btn btn-default") %>
          <%= link_to("Edit", edit_mod_path(f), class: "btn btn-default") %>
          <%= link_to 'Delete', f, method: :delete, class: "btn btn-default", data: {confirm: 'Are you sure?'} %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div align="center">
  <%= link_to 'Add module', new_mod_path, class: "btn btn-default" %>
</div>