-# frozen_string_literal: true
= simple_form_for(@user) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  =@user.username




  .form-inputs

    = f.input :admin
    = f.association :mod


  .form-actions
    = f.button :submit
